<Page x:Class="LivePaper.Pages.SettingPages.generalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LivePaper.Pages.SettingPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="generalPage">

    <Grid>
        <StackPanel Margin="30,30,30,30">
            <TextBlock Text="배경화면 경로" FontSize="14"/>
            <ComboBox >
                <ComboBoxItem Content="로컬 파일 사용"/>
                <ComboBoxItem Content="내부 스토리지에 복사"/>
            </ComboBox>

            <TextBlock Text="프로그램" FontSize="14" Margin="0,40,0,0"/>
            <CheckBox Content="윈도우 시작시 자동 실행"/>
            <CheckBox Content="프로그램 우선 순위"/>

            <TextBlock Text="개발자 옵션" FontSize="14" Margin="0,40,0,0"/>
            <WrapPanel>
                <Button Content="Repaint BG" Margin="0,0,10,0"/>
                <Button Content="Restore BG"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
